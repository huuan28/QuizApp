<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_orangered"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="375dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/white_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtUserID"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_orange"
            android:drawableLeft="@drawable/ic_user_gray"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Số điện thoại..."
            android:inputType="number"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/edtPw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_orange"
            android:drawableLeft="@drawable/ic_pw_gray"
            android:drawableRight="@drawable/ic_eye_gray"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Mật khẩu..."
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="25dp">

            <CheckBox
                android:id="@+id/cbRememberPw"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Lưu đăng nhập" />

            <TextView
                android:id="@+id/txtForgotPw"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Quên mật khẩu?"
                android:textColor="#3F51B5" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_orangered"
            android:text="ĐĂNG NHẬP"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp">

            <TextView
                android:id="@+id/txtChuacotk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản?    " />

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Đăng ký ngay!"
                android:textColor="#3F51B5" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>